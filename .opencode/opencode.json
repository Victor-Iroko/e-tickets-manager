{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "convex-mcp": {
      "type": "local",
      "command": ["bunx", "-y", "convex@latest", "mcp", "start"],
      "enabled": true
    },
    "nuxt": {
      "type": "remote",
      "url": "https://nuxt.com/mcp",
      "enabled": true
    },
    "nuxt-ui": {
      "type": "remote",
      "url": "https://ui.nuxt.com/mcp",
      "enabled": true
    }
  }
}
