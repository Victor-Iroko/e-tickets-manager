# Convex
CONVEX_URL=https://your-project.convex.cloud
NUXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud

# Site URL (used for OAuth redirects)
NUXT_PUBLIC_SITE_URL=http://localhost:3000

# Better Auth Secret (generate with: openssl rand -base64 32)
NUXT_BETTER_AUTH_SECRET=your-secret-here

# Google OAuth (https://console.cloud.google.com)
NUXT_GOOGLE_CLIENT_ID=your-google-client-id
NUXT_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Convex Environment Variables (set via npx convex env set)
# BETTER_AUTH_SECRET=same-as-NUXT_BETTER_AUTH_SECRET
# SITE_URL=http://localhost:3000
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
